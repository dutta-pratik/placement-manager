<div>
    <br>
    <span><strong>Company: </strong></span><%= Interview_company %> 
    <br>
    <br>
    <span><strong>Date: </strong></span><%= Date %> 
    <br>
    <br>


    <table border="1">
        
        <tr>
            <th rowspan="2">Name</th>
            <th>Status</th>
            <th>Result</th>
        </tr>
        <tr>
            <td>[Placed/Not_Placed]</td>
            <td>[Pass, Fail, On Hold, Didn't Attempt]</td>
        </tr>
        
        <% for(student of students){ %>
            <tr>
                <td><%= student.name %> </td>
                
                <% for(res of result){ %>
                    <form action="/interview/save-result/<%= id%>/<%= student._id %>", method="POST">

                        <%if(res.student._id.equals(student._id) && res.interview._id.equals(id)){%>
                            <td> <input type="text" name="status" id="status" placeholder="<%= res.status %>"></td>
                            <td> <input type="text" name="result" id="result" placeholder="<%= res.result %>"></td>
                        <%}else{%>
                            <td><input type="text" name="status" id="status"></td>
                            <td><input type="text" name="result" id="result"></td>
                        <% } %> 
                        <td>
                            <!-- <a href="/save-result/<%#= id%>/<%#= student._id %>">Save</a> -->
                            <input class="btn btn-dec-rev" type="submit" name="submit" id="submit">
                        </td>

                    </form>
                    
                <% } %>  
                
            </tr>
        <% } %> 
        
        

    </table>

</div>